generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      String  @id @default(uuid())
  name    String
  items   MenuItem[]
}

model MenuItem {
  id          String   @id @default(uuid())
  name        String
  description String
  price       Float
  status      String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
}
